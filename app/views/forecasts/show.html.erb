  <div class="container">
    <div class="middle">
      <img src="/partly_cloudly.png" width="120" height="100" alt="weather icon"> <span class="temp"><%= @current_weather.temperature %> Â°F</span>
      <div class="summary"> <%= @current_weather.summary %></div>
        <div class="container1">
          Wind:
          <%= @current_weather.windSpeed %> mph

          <span class="pressure">
            Pressure:
            <%= @current_weather.pressure %> mb
          </span>

          <span class="humidity">
            Humidity:
            <%= @current_weather.humidity * 100 %> %
          </span>

          <span class="visibility">
            Visibility:
            <%= @current_weather.visibility %> km
          </span>

          <span class="weather_detail">
            <%= link_to 'more details', forecasts_details_path, method: :get %>
          </span>
        </div>
    </div>
    <hr>
    <h1>Available Drones</h1>
    <span class="led">
      <span class="available">
        available: <span class="led-green"></span>
      </span>
      <span class="not_available">
        not available: <span class="led-red"></span>
      </span>
    </span>
    <br>
    <br>
    <div>
      <span class="led-green"></span> Drone1 ----- Battery: <%= @sim_battery %> %
      <!--  <span class="led-green"></span> Drone2 | Battery: 60%-->
    </div>
    <div>
      <span class="led-red"></span> Drone2 ----- Battery: <%= @real_battery %> %
    </div><br>
    <hr>
    <h1>Fleet Control</h1>
    <span class="open_close">
      <span class="open_door"> <%= link_to 'Open Door', base_open_door_path, method: :put %> </span>
      <span class="close_door"> <%= link_to 'Close Door', base_close_door_path, method: :put %> </span>
    </span>
  </div>
