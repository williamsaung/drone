  }

  .container1 {
    color: #777;
    font-weight: normal;
  }

  .pressure {
    margin-left: 30px;
  }

  .humidity {
    margin-left: 30px;
  }

  .visibility {
    margin-left: 30px;
  }

  .icon {
    margin-left: 30px;
  }

  .weather_detail {
    float: right;
  }

  .led {
    color: #777;
    font-weight: normal;
    float: left;
  }

  .available {
    float: right;
    margin-right: 15px;
  }

  .not_available {
    float: right;
    margin-right: 15px;
  }

  .led-green {
    /*margin: 0 auto;*/
    width: 10px;
    height: 10px;
    background-color: #80ff00;
    border-radius: 50%;
    box-shadow: rgba(0, 0, 0, 0.2) 0 -1px 7px 1px, inset #304701 0 -1px 9px, #89FF00 0 2px 12px;
    display: inline-block;
  }

  .led-red {
    /*margin: 0 auto;*/
    width: 10px;
    height: 10px;
    background-color: #ff0000;
    border-radius: 50%;
    box-shadow: rgba(0, 0, 0, 0.2) 0 -1px 7px 1px, inset #ff0000 0 -1px 9px, rgba(255, 0, 0, 0.5) 0 2px 12px;
    display: inline-block;
  }

  .open_close {
    margin-top: 10px;
    float: left;
  }

  .open_door {
    float: right;
    margin-right: 15px;
  }

  .close_door {
    float: right;
    margin-right: 15px;
  }

  #customers {
    /*font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;*/
    border-collapse: collapse;
    width: 100%;
  }

  #customers td, #customers th {
    border: 1px solid #ddd;
    padding: 8px;
  }

  #customers tr:nth-child(even){background-color: #f2f2f2;}

  #customers tr:hover {background-color: #ddd;}

  #customers th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: left;
    background-color: #4CAF50;
    color: white;
  }
