  ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: #333;
  }

  li {
    float: left;
  }

  li a {
    display: block;
    color: white;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
  }

  li a:hover {
    background-color: #111;
  }

  .middle {
    text-align: center;
  }

  .temp {
    margin-left: 10px;
    font-size: 40px;
    font-weight: 500;
    color: black;
  }

  .summary {
    margin-top: 7px;
    font-size: 40px;
    font-weight: 500;
