<div class="container">
<h1>Posts</h1>
</div>



<div class="container">
  <table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.user.email %></td>

        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        <td><a class="btn btn-primary" href="/comments/new" role="button">Submit Answer</a> </td>
      </tr>
    <% end %>


  </tbody>
</table>
</div>
<br>
<div class="container">
  <a class="btn btn-primary" href="/posts/new" role="button">Create New Post</a>

</div>
</div>